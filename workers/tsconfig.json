{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": { "@/*": ["../src/*"] },
    "baseUrl": "."
  },
  "include": ["./**/*.ts", "../src/lib/**/*.ts"]
}
